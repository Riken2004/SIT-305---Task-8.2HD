<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- App’s DayNight theme -->
    <style name="Theme.HealthMate" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/teal_700</item>
        <!-- Darker variant used for status bar, etc. -->
        <item name="colorPrimaryVariant">@color/teal_900</item>
        <!-- Text/icon color on primary surfaces -->
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary/accent color -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Apply our custom shape & CardView styling -->
        <item name="shapeAppearanceSmallComponent">@style/Shape.HealthMate.Corner</item>
        <item name="materialCardViewStyle">@style/Widget.HealthMate.CardView</item>
        <!-- Optional: status bar tint -->
        <item name="android:statusBarColor">@color/teal_900</item>
    </style>

    <!-- CollapsingToolbar when expanded (text invisible over image) -->
    <style name="CollapsingToolbar_Expanded"
        parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textColor">@android:color/transparent</item>
    </style>

    <!-- CollapsingToolbar when collapsed (text in white) -->
    <style name="CollapsingToolbar_Collapsed"
        parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <!-- Quote text styling -->
    <style name="QuoteContent">
        <item name="android:fontFamily">serif</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:lineSpacingExtra">6dp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <!-- Author text styling -->
    <style name="QuoteAuthor">
        <item name="android:fontFamily">serif</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <!-- Rounded‐corner shape for components -->
    <style name="Shape.HealthMate.Corner"
        parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <!-- CardView style with matching corners -->
    <style name="Widget.HealthMate.CardView"
        parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">16dp</item>
    </style>

    <!-- NEW: Search‐bar style -->
    <style name="Widget.HealthMate.Search"
        parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">@color/teal_700</item>
        <item name="hintTextColor">@color/teal_700</item>
    </style>



</resources>
