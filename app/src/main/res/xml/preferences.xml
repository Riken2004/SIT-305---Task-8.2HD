<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Daily goal -->
    <EditTextPreference
        android:key="pref_goal"
        android:title="Daily Step Goal"
        android:dialogTitle="Set your daily step goal"
        android:defaultValue="10000"
        android:inputType="number" />

    <!-- Units: steps or kilometers -->
    <ListPreference
        android:key="pref_unit"
        android:title="Units"
        android:dialogTitle="Select display units"
        android:entries="@array/unit_entries"
        android:entryValues="@array/unit_values"
        android:defaultValue="steps"/>
</PreferenceScreen>
